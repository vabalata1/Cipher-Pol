<section>
  <h1>Tableau des infos & rumeurs</h1>
  <p class="actions"><a class="btn btn-primary" href="/rumors/new">Poster</a></p>
  <ul>
    <% rumors.forEach(r => { %>
      <li>
        <strong>[<%= r.codeTag %>]</strong> <%= r.content %>
        <small>(<%= r.credibility %>) — par <%= r.code %></small>
        <% if (currentUser?.isAdmin) { %>
          <form class="actions" method="post" action="/rumors/delete/<%= r.id %>" onsubmit="return confirm('Supprimer cette entrée ?');" style="display:inline-block;margin-left:8px;">
            <% if (csrfToken) { %><input type="hidden" name="_csrf" value="<%= csrfToken %>"><% } %>
            <button class="btn btn-outline" type="submit">Supprimer</button>
          </form>
        <% } %>
      </li>
    <% }) %>
  </ul>
</section>


