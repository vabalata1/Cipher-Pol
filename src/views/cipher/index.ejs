<main>
  <div class="cipher-container">
    <div class="cipher-header">
      <% if (currentUser && (currentUser.code === 'MR.0' || currentUser.code === 'MR.1')) { %>
      <div class="actions"><button type="button" id="shuffleBtn" class="btn btn-outline">Mélanger</button></div>
      <% } %>
    </div>
    
    <div class="cipher-table" id="cipherTable"></div>
    
    <div class="cipher-tools">
      <div class="cipher-tool-section">
        <h3>📜 ENCODER</h3>
        <textarea id="plainText" placeholder="Tapez votre message ici..."></textarea>
        <div class="cipher-button-container">
          <button type="button" id="encodeBtn" class="btn btn-primary">⚔️ Encoder</button>
          <button type="button" id="clearPlainBtn" class="btn btn-secondary">🗑️ Effacer</button>
        </div>
      </div>
      
      <div class="cipher-tool-section">
        <h3>🔓 DÉCODER</h3>
        <textarea id="cipherText" placeholder="Tapez votre message ici..."></textarea>
        <div class="cipher-button-container">
          <button type="button" id="decodeBtn" class="btn btn-primary">🗝️ Décoder</button>
          <button type="button" id="clearCipherBtn" class="btn btn-secondary">🗑️ Effacer</button>
        </div>
      </div>
    </div>
    
      </div>
</main>

<script src="/public/js/cipher.js"></script>
